<div class="container mt-5">
  <body>
    <h1>Welcome to Blossoms</h1>
    <br />
    <table class="table">
      <thread>
        <tr>
          <th>Flower Name</th>
          <th>Details</th>
          <th>Image</th>
          <th>Price</th>
        </tr>
      </thread>
      <tbody>
        <% flowerList.forEach(function(flower){ %>
        <tr>
          <td><%= flower.flowerName %></td>
          <td><%= flower.details %></td>
          <td><%= flower.imageUrl %></td>
          <td><%= flower.price %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <a class="mt-3 mb-3 btn btn-success" href="/pastOrders">Past Orders</a>
  </body>
  <br />
  
</div>

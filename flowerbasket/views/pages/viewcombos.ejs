<nav class="navbar navbar-dark navbar-expand-md darkNav pt-2 pb-2 pl-5 pr-5">
  <a class="navbar-brand" href="/">FlowerBasket</a>
  <form class="form-inline ml-auto">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
  <ul class="navbar-nav ml-auto">
    <li class="nav-item">
      <a class="nav-link" href="/customizeYourCombo">Customize Flower Basket</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/login">Login</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/signup">Signup</a>
    </li>
  </ul>
</nav>
<div class="container mt-5">
  <div style="margin-top: 80px; text-align: center;">
    <h2>Flower Basket Combos</h2>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Combo Id</th>
        <th>Flower Name</th>
        <th>Basket Name</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% combos.forEach(function(i){ %>
      <tr>
        <td>
          <%= i.id %>
        </td>
        <td>
          <%= i.flowerName %>
        </td>
        <td>
          <%= i.basketName %>
        </td>
        <td>
          <%= i.price %>
        </td>
        <td>
          <a href="/combo/detail?id=<%=i.id%>" type="button" role="btn btn-info"
            style="background-color: black; color:green;">View
            Details</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>